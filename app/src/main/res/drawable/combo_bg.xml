<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item android:id="@+id/background_shape">
        <shape android:shape="rectangle">
            <!-- Adjust the radius to control the corner roundness -->
            <gradient
                android:angle="45"
                android:startColor="@color/white"
                android:centerColor="#0000FF"
                android:endColor="#FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Other Shape -->
    <item android:id="@+id/other_shape">
        <shape android:shape="rectangle">

            <gradient
                android:angle="45"
                android:startColor="#A684BAFB"
                android:centerColor="#E05AA6F1"
                android:endColor="#C56B9EF2"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
